{
  "manifest_version": 3,
  "name": "Chrome Debug Extension",
  "version": "1.0.0",
  "description": "One-click debug context capture for Tyler's workflow",
  "permissions": [
    "tabs",
    "activeTab",
    "debugger",
    "downloads",
    "storage",
    "scripting"
  ],
  "host_permissions": [
    "http://*/*",
    "https://*/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Debug Context Capture"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}